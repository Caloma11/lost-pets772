<div class="row justify-content-center">
  <div class="col-6">


    <div class="card border p-3 mt-4">

    <h1><%= @pet.name %> </h1>
    <h2>Color: <%= @pet.color %> </h2>
    <h3>It's a <%= @pet.species %> </h3>
    <h3>Last saw in <%= @pet.location %> </h3>
    <h4><%= @pet.days_ago %> </h4>


    <%= link_to "Edit", edit_pet_path(@pet), class: "btn btn-warning" %>

    <%= link_to "Back", pets_path, class: "btn btn-primary" %>

    </div>
  </div>
</div>
