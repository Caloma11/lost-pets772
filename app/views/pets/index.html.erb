

<div class="container">

<h1>All pets:</h1>
<ul>

<% @pets.each do |pet| %>

  <li>
    <%= link_to pet.name, pet_path(pet) %>
    <%= link_to "X", pet_path(pet), method: :delete, class: "text-danger", data: { confirm: "Are you sure?"} %>
  </li>

<% end %>
</ul>

<%= link_to "List your pet", new_pet_path %>
</div>
